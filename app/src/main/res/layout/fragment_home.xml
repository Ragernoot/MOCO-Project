<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Spinner
        android:id="@+id/dropDown_States"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="79dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="79dp"
        android:spinnerMode="dropdown" />

    <Spinner
        android:id="@+id/dropDown_DistrictsForState"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dropDown_States"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="79dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="79dp"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/text_view_show_state"
        android:layout_width="wrap_content"
        android:layout_height="236dp"
        android:layout_below="@+id/dropDown_DistrictsForState"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_view_show_district"
        android:layout_width="wrap_content"
        android:layout_height="323dp"
        android:layout_below="@+id/text_view_show_state"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="25dp" />

</RelativeLayout>